{
  "name": "home-app",
  "version": "0.0.1",
  "description": "home app for tracking stuff",
  "repository": "https://github.com/ProPanek/home-app.git",
  "author": "ProPanek <oga.seb@gmail.com>",
  "license": "MIT",
  "scripts": {
    "server": "npm run start:dev --prefix server",
    "client": "sudo PORT=80 npm start --prefix client",
    "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\"",
    "start": "concurrently \"yarn server\" \"yarn client\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "/client/**/*.{ts,tsx,js,jsx,json}": [
      "eslint . --fix",
      "prettier --write ."
    ]
  },
  "devDependencies": {
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7"
  },
  "dependencies": {
    "concurrently": "^8.0.1"
  }
}
